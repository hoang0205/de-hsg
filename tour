#include <bits/stdc++.h>

using namespace std;
int a,n,s,k,m,t[100],d[100000][3],max1=99999999,dem,max2;
bool c[1001][1001];
void backtrack(int i)
{
    for(int j=1;j<=n;j++)
    {
        if(j==t[a+1])
        {
            if(c[i][j]==1||c[j][i]==1)
            {   dem++;cout<<i<<" "<<j<<" "<<dem<<" ";
                if(j==t[a+1])
                    {
                        if(dem<max1) {max1=dem;dem=1;j=t[a];}


                    }


            }
              else {backtrack(j+1);}
        }
        cout<<endl;
        //if(dem<max1) {max1=dem;cout<<dem<<endl;dem=0;}

    }
    max2=max2+max1;
}
int main()
{
    freopen("tour.inp","r",stdin);
    freopen("tour.out","w",stdout);
    cin>>n>>k>>m;
    cin>>s;
    for(int i=1;i<=k;i++) cin>>t[i];
    t[k+1]=s;t[0]=s;
    for(int i=1;i<=m;i++) {int k,l;cin>>k>>l;c[k][l]=true;} //cin>>m[i][1]>>m[i][2];
    for(a=0;a<=k+1;a++) backtrack(t[a]);
    //backtrack(s);
    cout<<max2;
    return 0;
}
